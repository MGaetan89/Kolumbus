<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape
			android:shape="rectangle">
			<corners android:radius="@dimen/kolumbus_color_preview_radius"/>

			<size
				android:width="@dimen/kolumbus_color_preview_size"
				android:height="@dimen/kolumbus_color_preview_size"/>

			<solid android:color="@color/kolumbus_color_preview_border"/>
		</shape>
	</item>
	<item
		android:bottom="@dimen/kolumbus_color_preview_border"
		android:left="@dimen/kolumbus_color_preview_border"
		android:right="@dimen/kolumbus_color_preview_border"
		android:top="@dimen/kolumbus_color_preview_border">
		<shape
			android:shape="rectangle">
			<corners android:radius="@dimen/kolumbus_color_preview_radius"/>

			<size
				android:width="@dimen/kolumbus_color_preview_size"
				android:height="@dimen/kolumbus_color_preview_size"/>

			<solid android:color="#00FF00"/>
		</shape>
	</item>
</layer-list>
