<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="?android:listPreferredItemHeight"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:paddingEnd="@dimen/kolumbus_padding"
	android:paddingLeft="@dimen/kolumbus_padding"
	android:paddingRight="@dimen/kolumbus_padding"
	android:paddingStart="@dimen/kolumbus_padding">

	<TextView
		android:id="@android:id/text1"
		style="@android:style/TextAppearance.Medium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="Table Name"/>

	<TextView
		android:id="@android:id/text2"
		style="@android:style/TextAppearance"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="@plurals/kolumbus_entries_count"/>
</LinearLayout>
