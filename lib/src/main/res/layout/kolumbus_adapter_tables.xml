<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="?attr/listPreferredItemHeight"
	android:background="?selectableItemBackground"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:paddingEnd="@dimen/kolumbus_padding"
	android:paddingLeft="@dimen/kolumbus_padding"
	android:paddingRight="@dimen/kolumbus_padding"
	android:paddingStart="@dimen/kolumbus_padding">

	<TextView
		android:id="@android:id/text1"
		style="@style/TextAppearance.AppCompat.Subhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="Table Name"/>

	<TextView
		android:id="@android:id/text2"
		style="@style/TextAppearance.AppCompat.Body1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		tools:text="@plurals/kolumbus_entries_count"/>
</LinearLayout>
